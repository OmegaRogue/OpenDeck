{
	"compilerOptions": {
		"module": "Node16",
		"target": "ES2020",
		"lib": [ "ES2021" ],
		"allowJs": true,
		"outDir": "build",
		"rootDir": "src/script/",
		"sourceMap": true,
		// "noImplicitAny": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"paths": {
			"*": [ "./node_modules/*" ]
		},
		"skipLibCheck": true
	},
	"include": [ "src/script/*" ]
}